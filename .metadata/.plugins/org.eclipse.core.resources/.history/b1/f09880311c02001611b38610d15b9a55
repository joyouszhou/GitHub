package com.zhgame.common.utils;

import org.apache.commons.lang.StringUtils;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

public class SdkLogUtil {

	private static final Logger createlog = LoggerFactory.getLogger("billing-create");

	public static void createLog(String appkey, String groupId, String gameChannel, String channelId, String userId, String roleId, String goodsPrice, String goodsRegisterId, String orderId, int isSandbox) {
		char c = 0x01;
		String s = DateUtil.getNowDateTime() + c + appkey + c + (StringUtils.isEmpty(groupId) ? "0" : groupId) + c + gameChannel + c + channelId + c + userId + c + (StringUtils.isEmpty(roleId) ? "0" : roleId) + c + goodsPrice + c + goodsRegisterId + c + orderId + c + isSandbox + c + "0" + c + "0";
		createlog.info(s);
	}
}

package com.zhgame.common.custom.base;

import java.net.MalformedURLException;

import com.caucho.hessian.client.HessianProxyFactory;

public class RemoteClient {
	
	private static HessianProxyFactory factory = null;
	private static RemoteClient remoteClient = null;
	
	static {
		if (null == factory) {
			factory = new HessianProxyFactory();
		}
	}
	
	public static RemoteClient getInstance() {
		if (null == remoteClient) {
			remoteClient = new RemoteClient();
		}
		return remoteClient;
	}
	
	@SuppressWarnings("unchecked")
	public <T> Object send(Class<T> t,String url,String appkey) throws MalformedURLException{
		Object in = null;
		try {
			in = (T) (factory).create(t,url+"?appkey="+appkey);
		} catch (MalformedURLException e) {
			e.printStackTrace();
			throw e;
		}
		return in;
	}
}
